{
  "name": "Oh-my-Mock",
  "version": "__OH_MY_VERSION__",
  "description": "Extension for caching and mocking API (XHR/Fetch) responses",
  "manifest_version": 2,
  "permissions": [
    "background",
    "storage",
    "unlimitedStorage",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": "oh-my-mock/assets/icons/icon-off-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["injected.js", "oh-my-mock/index.html"],
  "icons": {
    "16": "oh-my-mock/assets/icons/icon-16.png",
    "48": "oh-my-mock/assets/icons/icon-48.png",
    "128": "oh-my-mock/assets/icons/icon-128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' 'unsafe-hashes'; object-src 'self'"
}
